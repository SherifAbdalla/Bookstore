<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorSyle.css" rel="stylesheet" />
    <style>
        .navbar-right{
            float:left !important;
            margin-left:50px;
            margin-right:15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">Book Store</span>
            <div class="visible-xs">Book</div>
            <div class="visible-xs">Store</div>
        </a>
        @Html.Action("Summary", "Cart")
    </div>
    <div class="visible-xs">
        @Html.Action("menu", "Nav", new { MobileLayout = true })
    </div>
    <div class="row panel">
        <div id="specialization" class="col-xs-3 hidden-xs">
            @Html.Action("menu", "Nav")
        </div>
        <div class="col-xs-12 col-sm-8">
             @RenderBody()
        </div>
    </div>
    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>