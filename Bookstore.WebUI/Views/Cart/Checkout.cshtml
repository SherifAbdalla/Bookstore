@model Bookstore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "BookStore : Checkout";
}

<h2>Check Out Now</h2>
<p>Please enter your detailes, and we'll ship your books rigth away</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x=>x.Name, new { @class="form-control" })
    </div>
    <h3>Address</h3>
    foreach(var property in ViewData.ModelMetadata.Properties)
    {
        if(property.PropertyName != "Name" && property.PropertyName != "GitWrap")
        {
            <div class="form-group">
                <label>@(property.DisplayName ?? property.PropertyName):</label>
                @Html.TextBox(property.PropertyName,null, new { @class = "form-group" })
            </div>
        }
    }
    <h3>Options</h3>
    <div class="checkbox">
        <label>@Html.EditorFor(x=>x.GiftWrap) 
            Gift wrap these book(s)
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
}

